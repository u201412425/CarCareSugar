<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pe.edu.upc.carcare.activities.DashboardActivity"
    tools:showIn="@layout/activity_dashboard">
    <TextView
        android:id="@+id/entriesCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="64sp"
        android:text="03"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/gallonsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:text="48.60"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/entriesTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Records"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/entriesCountTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/entriesCountTextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/entriesCountTextView" />
    <TextView
        android:id="@+id/gallonsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallons"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gallonsTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/gallonsTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/gallonsTextView" />
</android.support.constraint.ConstraintLayout>
